 <!-- ASSESSMENT_TYPES defined in config/initializers/assessment.rb -->
 
 <%= form_for @assessment do |f| %>  
   <%= f.error_messages %>  
   <p>  
     <%= f.label :name %>  
     <%= f.text_field :name %>  
<br />
    <%= f.label :level %>
    <%= f.text_field :level %>
<br />
    <%= f.label :assessment_type %>
    <%= f.text_field :assessment_type %>
    <br />
    <%= f.label :assessment_type %>
    <%= f.select :assessment_type, options_for_select(ASSESSMENT_TYPES) %>
  </p>
   <%= f.fields_for :questions do |builder| %>  
     <%= render 'question_fields', :f => builder %>  
   <% end %>
  <p>
    <%= link_to_add_fields "Add a question", f, :questions %>    
   <p><%= f.submit "Submit" %></p>  
 <% end %> 



