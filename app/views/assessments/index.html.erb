<% title "Assessments" %>

<table>
  <tr>
    <th>Name</th>
    <th>Level</th>
    <th>Assessment Type</th>
  </tr>
  <% for assessment in @assessments %>
    <tr>
      <td><%= assessment.name %></td>
      <td><%= assessment.level %></td>
      <td><%= assessment.assessment_type %></td>
      <td><%= link_to "Show", assessment %></td>
      <td><%= link_to "Edit", edit_assessment_path(assessment) %></td>
      <td><%= link_to "Destroy", assessment, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<%= button_to "New Assessment", { :action => 'new' },  :remote => true %>


<div id="add_assessment">
<%= form_for @assessment do |f| %>  
   <%= f.error_messages %>  
   <p>  
     <%= f.label :name %>  
     <%= f.text_field :name %>  
     <br />
    <%= f.label :assessment_type %>
    <%= f.select :assessment_type, options_for_select(ASSESSMENT_TYPES) %>
    <%= f.submit "Create new assessment" %>
  </p>
 
   <% end %>
</div>