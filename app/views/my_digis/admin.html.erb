    <td class="teenytext"><%= link_to 'Delete', my_digi, :confirm => 'Are you sure?', :method => :delete %></td>
      <td ><% if my_digi.public_play? %> Playable <% else %><%= button_to 'Make Playable', make_playable_my_digi_path(my_digi), :confirm => 'Are you sure?'  %> <% end %></td>

  </tr>
<% end %>
